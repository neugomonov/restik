// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Cart {
	id        	Int      @default(autoincrement()) @id
	name    	String
	type 		String
	price 		Float
	quantity 	Int
	orderId		Int
}

model Order {
	id        	Int      @default(autoincrement()) @id
	createdAt 	DateTime @default(now())
	name 		String
	email 		String
	phone		String
	company		String?
	address		String
	postal		String
	city		String
	floor		String?
	time		String
	notes		String?
	payment		String
	tip			String?
	total		Float
}
